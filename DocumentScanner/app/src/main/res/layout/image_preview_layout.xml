<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activityNavigator"
            type="com.stcodesapp.documentscanner.ui.helpers.ActivityNavigator" />

        <variable
            name="fragmentNavigator"
            type="com.stcodesapp.documentscanner.ui.helpers.FragmentNavigator" />

        <variable
            name="viewModel"
            type="com.stcodesapp.documentscanner.ui.imageEdit.ImagePreviewViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.imageEdit.ImagePreviewActivity">

        <include layout="@layout/app_toolbar"
            bind:title="@{@string/edit_image}"
            bind:addElevation="@{Boolean.TRUE}"
            bind:showBackIcon="@{Boolean.TRUE}"
            bind:navigator="@{activityNavigator}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/dimen_16"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/imageOptionContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appToolbar">

            <FrameLayout
                android:id="@+id/holderImageCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"/>
            </FrameLayout>

            <com.labters.documentscanner.libraries.PolygonView
                android:id="@+id/polygonView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/imageOptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rotateButton"
                style="@style/imagePreviewButtonStyle"
                android:drawableTop="@drawable/rotate_left_white_24"
                android:text="@string/rotate"
                app:layout_constraintBottom_toBottomOf="@+id/chosenImageView"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cropButton"
                style="@style/imagePreviewButtonStyle"
                android:drawableTop="@drawable/crop_white_24"
                android:text="@string/crop"
                app:layout_constraintBottom_toBottomOf="@+id/chosenImageView"
                app:layout_constraintStart_toEndOf="@id/rotateButton" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterButton"
                style="@style/imagePreviewButtonStyle"
                android:drawableTop="@drawable/filter_white_24"
                android:text="@string/filter"
                android:onClick="@{() -> fragmentNavigator.loadFilterFragment(viewModel.chosenImagePath)}"
                app:layout_constraintBottom_toBottomOf="@+id/chosenImageView"
                app:layout_constraintStart_toEndOf="@id/cropButton" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/deleteButton"
                style="@style/imagePreviewButtonStyle"
                android:drawableTop="@drawable/delete_white_24"
                android:text="@string/delete"
                app:layout_constraintBottom_toBottomOf="@+id/chosenImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/filterButton" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detectEdge"
                style="@style/imagePreviewButtonStyle"
                android:drawableTop="@drawable/pdf_white_16"
                android:onClick="@{() -> viewModel.detectEdges()}"
                android:text="Edges"
                app:layout_constraintBottom_toBottomOf="@+id/chosenImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/filterButton" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/saveButton"
                style="@style/imagePreviewButtonStyle"
                android:drawableTop="@drawable/done_white_24"
                android:text="@string/save"
                app:layout_constraintBottom_toBottomOf="@+id/chosenImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/filterButton" />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/filterOptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/imageOptionContainer"
            />







    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
</layout>
