<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.paperEffect.PaperEffectFragment">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/apply_paper_effect"
        android:layout_margin="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginHorizontal="@dimen/dimen_8" />

    <TextView
        android:id="@+id/improveTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/improve_text"
        android:layout_margin="@dimen/dimen_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <SeekBar
        android:id="@+id/textColorSeekBar"
        android:layout_width="0dp"
        android:max="100"
        android:progress="5"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:paddingStart="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/improveTextColor" />

    <TextView
        android:id="@+id/improveBackgroundColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/improve_background"
        android:layout_margin="@dimen/dimen_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textColorSeekBar" />

    <SeekBar
        android:id="@+id/backgroundSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:max="100"
        android:progress="5"
        android:paddingStart="@dimen/dimen_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/improveBackgroundColor" />



</androidx.constraintlayout.widget.ConstraintLayout>